    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,1,1)</defaultLabelColor>
	<initialSeverity>1</initialSeverity>
	<maxSeverity>1</maxSeverity>
    <stages>
      <li>
		<statFactors>
		  <ForagedNutritionPerDay>2</ForagedNutritionPerDay>
		</statFactors>
      </li>
    </stages>
    <comps>
      <li Class="HautsFramework.HediffCompProperties_OnCaravanSeverity">
        <perOnCaravanTick>1</perOnCaravanTick>
		<whileInMap>-1</whileInMap>
      </li>
	  <li Class="HediffCompProperties_SeverityPerDay">
		<severityPerDay>-0.2</severityPerDay>
		<showDaysToRecover>true</showDaysToRecover>
	  </li>
    </comps>
  </HediffDef>
  <HediffDef ParentName="HVT_TraitHediffBase">
    <defName>HVMP_CaravanSpeed</defName>
    <label>rover route assist (speed)</label>
    <description>Following a route optimized for speed, courtesy of real-time advisement from Rover Branch navigational services.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,1,1)</defaultLabelColor>
	<initialSeverity>1</initialSeverity>
	<maxSeverity>1</maxSeverity>
    <stages>
      <li>
		<capMods>
		  <li>
			<capacity>Moving</capacity>
			<postFactor>1.2</postFactor><!--does not actually affect caravan speed... caravan speed only cares about the default humanlike move speed, not the actual speed of the humanlikes on it... what the heck... so we use a Harmony patch to actually boost speed. Hopefully Tynan realizes this change is stupid, it certainly didn't use to work like this before-->
		  </li>
		</capMods>
      </li>
    </stages>
    <comps>
      <li Class="HautsFramework.HediffCompProperties_OnCaravanSeverity">
        <perOnCaravanTick>1</perOnCaravanTick>
		<whileInMap>-1</whileInMap>
      </li>
	  <li Class="HediffCompProperties_SeverityPerDay">
		<severityPerDay>-0.2</severityPerDay>
		<showDaysToRecover>true</showDaysToRecover>
	  </li>
    </comps>
  </HediffDef>
  <HediffDef ParentName="HVT_TraitHediffBase">
    <defName>HVMP_CaravanStealth</defName>
    <label>rover route assist (stealth)</label>
    <description>Following a route optimized for evading detection, courtesy of real-time advisement from Rover Branch navigational services.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,1,1)</defaultLabelColor>
	<initialSeverity>1</initialSeverity>
	<maxSeverity>1</maxSeverity>
    <stages>
      <li>
		<statOffsets>
		  <Hauts_PersonalCaravanVisibilityFactor>-0.95</Hauts_PersonalCaravanVisibilityFactor>
		</statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="HautsFramework.HediffCompProperties_OnCaravanSeverity">
        <perOnCaravanTick>1</perOnCaravanTick>
		<whileInMap>-1</whileInMap>
      </li>
	  <li Class="HediffCompProperties_SeverityPerDay">
		<severityPerDay>-0.2</severityPerDay>
		<showDaysToRecover>true</showDaysToRecover>
	  </li>
    </comps>
  </HediffDef>
  
</Defs>
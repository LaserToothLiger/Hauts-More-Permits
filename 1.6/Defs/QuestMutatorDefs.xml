<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--using this instead of Combat as a pawngroupkinddef lets me get silly with raid compositions-->
  <PawnGroupKindDef>
    <defName>HVMP_BonusQeustPawns</defName>
    <workerClass>PawnGroupKindWorker_Normal</workerClass>
  </PawnGroupKindDef>
  
  <!--COMMERCE Fortification
		pertinent to all three-->
  <IncidentDef>
    <defName>HVMP_RaidFortification</defName>
    <label>enemy raid</label>
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>HautsPermits.IncidentWorker_RaidFortification</workerClass>
    <baseChance>0</baseChance>
    <category>ThreatBig</category>
    <pointsScaleable>true</pointsScaleable>
    <tale>Raid</tale>
    <ignoreRecentSelectionWeighting>true</ignoreRecentSelectionWeighting>
    <canOccurOnAllPlanetLayers>true</canOccurOnAllPlanetLayers>
  </IncidentDef>
  <!--	Advanced Weaponry-->
  <HediffDef ParentName="DiseaseBase">
    <defName>HVMP_TargetedPsychicSuppression</defName>
    <label>lesser psychic suppression</label>
    <description>The effect of a targeted psychic suppression field. Coordination and reasoning are muddled.</description>
    <isBad>true</isBad>
    <everCurableByItem>false</everCurableByItem>
    <comps>
      <li Class="HediffCompProperties">
        <compClass>HautsPermits.HediffComp_TargetedPsychicSuppression</compClass>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMaxCurveOverride>
              <points>
                <li>0, 1</li>
                <li>1, 0.75</li>
              </points>
            </setMaxCurveOverride>
            <setMaxCurveEvaluateStat>PsychicSensitivity</setMaxCurveEvaluateStat>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <GameConditionDef>
    <defName>HVMP_TargetedPsychicSuppression</defName>
    <conditionClass>HautsPermits.HVMP_GameCondition_TargetedPsychicSuppression</conditionClass>
    <label>lesser psychic suppression</label>
    <description>A targeted psychic suppression field is affecting {0}s and slightly reducing their consciousness. The effect is modulated by an individual's psychic sensitivity.</description>
    <descriptionFuture>a targeted psychic suppression wave will slightly reduce the consciousness of all [psychicSuppressorGender]s around [map_definite] for [gameConditionDuration_duration]</descriptionFuture>
    <endMessage>The targeted psychic suppressor field has dissipated.</endMessage>
    <letterText>A targeted psychic suppressor field has begun slightly reducing the consciousness of {0}s across the whole region. The effect is modulated by an individual's psychic sensitivity.</letterText>
    <letterDef>NegativeEvent</letterDef>
    <canBePermanent>false</canBePermanent>
    <natural>false</natural>
  </GameConditionDef>
  <!--	Dead Raiders Tell No Tales-->
  <HediffDef ParentName="HVT_TraitHediffBase">
    <defName>HVMP_DRTNT</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>raiding scout</label>
    <description>This raider collects information on your colony. Should they escape, they will sell that information to interested parties, granting a temporary reserve of extra 'raid power' to four random hostile factions. This effect scales with sight, hearing, Construction skill, and Intellectual skill.</description>
	<comps>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	  <li Class="HautsFramework.HediffCompProperties_Espionage">
		<unscalableFlatSpyPoints>40</unscalableFlatSpyPoints>
		<baseSpyPoints>18</baseSpyPoints>
		<relevantSkills>
			<li>Construction</li>
			<li>Intellectual</li>
		</relevantSkills>
		<fallbackIfNoSkillLevel>1</fallbackIfNoSkillLevel>
		<relevantCapacities>
			<li>Sight</li>
			<li>Hearing</li>
		</relevantCapacities>
		<spyPointAttribution>RandomHostileFactions</spyPointAttribution>
		<randomFactionCount>4</randomFactionCount>
	  </li>
	  <li Class="HautsFramework.HediffCompProperties_MoteConditional">
		<mote>HVMP_EyeSpy</mote>
		<scale>1</scale>
	  </li>
	</comps>
  </HediffDef>
  <ThingDef ParentName="MoteBase">
	<defName>HVMP_EyeSpy</defName>
	<thingClass>MoteAttached</thingClass>
	<altitudeLayer>MoteOverhead</altitudeLayer>
	<mote>
		<fadeInTime>1.05</fadeInTime>
		<fadeOutTime>1.05</fadeOutTime>
		<solidTime>1.05</solidTime>
		<needsMaintenance>true</needsMaintenance>
	</mote>
	<graphicData>
	  <graphicClass>Graphic_Single</graphicClass>
	  <color>(0.44,0.067,0.067,0.7)</color>
	  <texPath>UI/Icons/RoyalFavor</texPath>
	  <drawSize>0.65</drawSize>
      <drawOffset>(0,0,1)</drawOffset>
	</graphicData>
  </ThingDef>
  
  <!--COMMERCE Intervention
		Burning, Unadulterated Burning-->
  <HediffDef ParentName="HVT_TraitHediffBase">
    <defName>HVMP_BUB</defName>
    <label>deepscan burn</label>
    <description>Exposure to high-frequency energy, which interferes with nervous systems.</description>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
	<maxSeverity>1</maxSeverity>
	<initialSeverity>1</initialSeverity>
    <comps>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	  <li Class="HautsPermits.HediffCompProperties_SeverityPerDay_BUB">
		<severityPerDay>-1</severityPerDay>
		<showHoursToRecover>true</showHoursToRecover>
		<adjustingStat>ToxicEnvironmentResistance</adjustingStat>
	  </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.3</painOffset>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>HVMP_BUBmood</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>HVMP_BUB</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>deepscan burn</label>
        <description>My entire body is prickling.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <!--used for the other two-->
  <ThingDef ParentName="EtherealThingBase">
    <defName>HVMP_TunnelHiveSpawner</defName>
    <label>tunnel</label>
    <thingClass>HautsPermits.TunnelHiveSpawner_Intervention</thingClass>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <alwaysFlee>true</alwaysFlee>
    <building>
      <groundSpawnerSustainedEffecter>EmergencePointSustained2X2</groundSpawnerSustainedEffecter>
      <groundSpawnerCompleteEffecter>EmergencePointComplete2X2</groundSpawnerCompleteEffecter>
    </building>
  </ThingDef>
  <!--	Infestation Infection-->
  <HediffDef>
    <defName>HVMP_ScariaVector</defName>
    <label>scaria vector</label>
    <description>This creature carries a strain of scaria. Although its behavior is unaffected by the disease, it may transmit scaria through bites or cuts.</description>
    <hediffClass>HautsPermits.Hediff_ScariaVector</hediffClass>
    <forceRenderTreeRecache>true</forceRenderTreeRecache>
    <inspectString>Scaria carrier.</inspectString>
    <renderNodeProperties>
      <li Class="PawnRenderNodeProperties_Overlay">
        <debugLabel>Scaria sores</debugLabel>
        <workerClass>PawnRenderNodeWorker_OverlayScaria</workerClass>
        <overlayLayer>Body</overlayLayer>
        <baseLayer>20</baseLayer>
        <pawnType>HumanlikeOnly</pawnType>
      </li>
      <li>
        <debugLabel>Scaria sores</debugLabel>
        <nodeClass>PawnRenderNode_AnimalPart</nodeClass>
        <workerClass>PawnRenderNodeWorker_OverlayScaria</workerClass>
        <overlayLayer>Body</overlayLayer>
        <baseLayer>20</baseLayer>
        <pawnType>NonHumanlikeOnly</pawnType>
      </li>
    </renderNodeProperties>
  </HediffDef>
  <!--	Jitterbugs-->
  <HediffDef ParentName="HVT_TraitHediffBase">
    <defName>HVMP_Jitterbug</defName>
    <label>deepscan stimulus</label>
    <description>This creature has been energized by exposure to exotic scanning radiation.</description>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <skinColorTint>(0.72, 0.95, 1)</skinColorTint>
    <skinColorTintStrength>0.4</skinColorTintStrength>
    <forceRenderTreeRecache>true</forceRenderTreeRecache>
	<maxSeverity>1</maxSeverity>
	<initialSeverity>1</initialSeverity>
    <comps>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	  <li Class="HediffCompProperties_SeverityPerDay">
		<severityPerDay>-2</severityPerDay>
		<showDaysToRecover>true</showDaysToRecover>
	  </li>
    </comps>
    <stages>
      <li>
        <painOffset>-0.25</painOffset>
        <statFactors>
          <MoveSpeed>1.2</MoveSpeed>
        </statFactors>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>
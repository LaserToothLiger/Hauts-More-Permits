<Defs>
  
  <!--Barker:
		Late Grows the Hour-->
  <HediffDef ParentName="HVT_TraitHediffBase">
	<defName>HVMP_LGTH</defName>
	<label>psychic agitation</label>
	<description>This entity's activity rises by an additional 2.5% per hour.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<isBad>false</isBad>
	<stages>
	  <li>
		<statFactors>
		  <IncomingDamageFactor>0.9</IncomingDamageFactor>
		</statFactors>
	  </li>
	</stages>
	<comps>
	  <li Class="HautsPermits_Occult.HediffCompProperties_LGTH">
		<activityPerHour>0.025</activityPerHour>
	  </li>
	</comps>
  </HediffDef>
  <HediffDef ParentName="HVT_TraitHediffBase">
	<defName>HVMP_LGTH_Corpse</defName>
	<label>psychic agitation</label>
	<description>This entity is awakening faster than normal.</description>
	<isBad>false</isBad>
	<minSeverity>6</minSeverity>
	<maxSeverity>8</maxSeverity><!--these are the min and max days it has to start the awakening process (ordinarily 11-13 days), after which you've only got 1-3 days left before it awakens. this shaves off 5 days total-->
	<initialSeverity>7</initialSeverity><!--rimworld complains if this is lower than the min, but it doesn't do anything for our purposes-->
  </HediffDef>
  
  <!--Fuller:
		Faith Well Kept-->
  <HediffDef ParentName="HVT_TraitHediffBase">
	<defName>HVMP_FWK</defName>
	<label>who keeps faith...</label>
	<description>... is never alone.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<isBad>false</isBad>
	<stages>
	  <li>
		<becomeVisible>false</becomeVisible>
	  </li>
	</stages>
	<comps>
	  <li Class="HautsPermits_Occult.HediffCompProperties_FWK">
		<MTBdays>10</MTBdays>
		<raidPointFactor>0.7</raidPointFactor>
		<maxPawns>10</maxPawns><!--it can go high, but let's not make it a clown car-->
	  </li>
	</comps>
  </HediffDef>
  <!--	Stark Raving Mad-->
  <HediffDef ParentName="HVT_TraitHediffBase">
	<defName>HVMP_SRM</defName>
	<label>anesthetic resistance</label>
	<description>Holy water cannot help you now / a thousand armies couldn't keep me out</description><!--I don't want your money, I don't want your crown / see I've come to burn your ...colony... down-->

    <placeWorkers>
      <li>PlaceWorker_ShowProjectileInterceptorRadius</li>
    </placeWorkers>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>30</pathCost>
    <fillPercent>0.45</fillPercent>
    <tickerType>Normal</tickerType>
